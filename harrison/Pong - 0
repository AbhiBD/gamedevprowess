
WINDOW_WIDTH = 1280            -- constants for the window height and width
WINDOW_HEIGHT = 720

function love.load()           -- basically a bootstrap for the window
    love.window.setMode(WINDOW_WIDTH, WINDOW_HEIGHT, {          -- overwrites love.load to initialise the windows dimensions and to set paramaters like fullscreen, resizable and vsync
        fullscreen = false,
        resizable = true,
        vsync = true
    })
end

function love.draw()            -- called at each frame by LOVE, basically updates the screen based on input (e.g mouse click)
    love.graphics.printf(       -- aligns text on the screen with structur - love.graphics.printf(text, x, y, [width], [align])
        'Hello Pong!',          -- text to render
        5,                      -- starting X (0 since we're going to center it based on width)
        WINDOW_HEIGHT / 2 - 6,  -- starting Y (halfway down the screen)
        WINDOW_WIDTH,           -- number of pixels to center within (the entire screen here)
        'center')               -- alignment mode, can be 'center', 'left', or 'right'
end
-- penis